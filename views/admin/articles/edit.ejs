<%- include ('../../partials/header.ejs')%>
<body>
    <%- include ('../../partials/navbar.ejs')%>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-title">
                <h2>Edição de Artigo</h2>                
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input class="form-control" type="text" name="title" placeholder="Defina o título da artigo" value="<%= articles.title%>"><br>
                    <textarea class="form-control" placeholder="Escreva o artigo" name="body" id="article"><%= articles.body%></textarea><br>     
                    <select name="category" class="form-control">
                        <% categories.forEach((category) => {%>
                            <% if(category.id == articles.categorieId) {%> 
                                <option value="<%= category.id %>" selected><%= category.title %></option>
                            <% } else { %> 
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% } %>                                 
                        <%})%>                        
                    </select>                                   
                    <input type="hidden" name ="id" value="<%= articles.id%>">
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
    
</body>
<%- include ('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js">
</script>
<script>
    tinymce.init({
        language:"pt_BR",
        selector: "#article",
        plugins:[
            'advlist autlink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>